<div id="devise">
<h2>SIGN IN</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "pure-form"}) do |f| %>
<div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, class: "pure-checkbox" %> <%= f.label :remember_me %></div>
  <% end -%>

  <p><%= f.submit "Sign in", class: "pure-button pure-button-primary" %></p>
<% end %>

<%= render "devise/shared/links" %>
</div>
