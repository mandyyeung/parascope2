<header>
  <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
    <a href="/" class="pure-menu-heading">Parascope</a>
    <ul id='controls'>
      <% if user_signed_in? %>
        <li class="pure-menu-selected">
            <a href="#">collections</a>
            <ul id='dropdown'>
                <li ><%= link_to 'Add New', new_collection_path %></li>
                <li class="pure-menu-separator"></li>
                <% current_user.collections.each do |col| %>
                  <% if col.name == 'Unsorted' %>
                    <li class="pure-menu-open"><%= link_to 'unsorted', collection_path(col) %><li>
                  <% else %>
                    <li><%= link_to col.name, collection_path(col) %><li>
                  <% end %>
                <% end %>
            </ul>
        </li>
        <li><%= link_to 'archive', archived_path %></li>
      <li><%= link_to "profile", edit_user_registration_path%></li>
      <li><%= link_to 'x', destroy_user_session_path, :method => :delete %></li>
      <% else %>
       <li><%= link_to "Sign Up", new_user_registration_path %></li>
       <li><%= link_to "Log In", new_user_session_path %></li>
      <% end %>
    </ul>
  </div>

<!--/.nav-collapse -->
</header>
